{
  //exclude property is used to exclude files from compilation
  //   "exclude": ["app.ts", "node_modules", "dist", "*.exclude.ts", "**/*.exclude.ts"],
  //   "include" property is used to include files for compilation
  //   "include": ["src/components"],
  "compilerOptions": {
    // File Layout
    "rootDir": "./src/components",
    "outDir": "./dist",
    "noEmitOnError": true,
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "esnext", //type of js to be generated
    "types": ["node"],
    // For nodejs:
    "lib": ["es2020", "dom"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
